{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "clean": "rm -rf dist logs",
    "clean:hard": "rm -rf dist logs node_modules",
    "prebuild": "rimraf dist",
    "build": "yarn db:generate && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "infra:dev:up": "docker-compose -f docker-compose.dev.yaml up -d",
    "infra:dev:build": "docker-compose -f docker-compose.dev.yaml build",
    "infra:dev:down": "docker-compose -f docker-compose.dev.yaml down -v",
    "infra:wait": "util/wait-for-it.sh -h \"$REDIS_HOST\" -p \"$REDIS_PORT\" && util/wait-for-it.sh -h \"$DB_HOST\" -p \"$DB_PORT\"",
    "start": "yarn infra:wait && yarn db:migrate && yarn db:generate && nest start",
    "start:dev": "yarn infra:wait && yarn db:migrate && yarn db:generate && nest start --watch --exec 'node -r tsconfig-paths/register -r ts-node/register src/main.ts'",
    "start:debug": "yarn infra:wait && yarn db:migrate && yarn db:generate && nest start --debug --watch",
    "start:prod": "yarn infra:wait && yarn db:migrate && yarn db:generate && node dist/main",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma reset",
    "db:generate": "prisma generate",
    "db:format": "prisma format",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.5.4",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.1.6",
    "@nestjs/core": "^8.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^8.2.6",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "^5.1.5",
    "@prisma/client": "^3.8.1",
    "@types/express-session": "^1.17.4",
    "@types/lodash": "^4.14.178",
    "@types/morgan": "^1.9.3",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "connect-redis": "^6.0.0",
    "env-var": "^7.1.1",
    "express-session": "^1.17.2",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "nest-winston": "^1.6.2",
    "nestjs-redis": "git+https://github.com/GyanendroKh/nestjs-redis.git#nest8-fix",
    "nestjs-session": "^2.0.0",
    "prisma": "^3.8.1",
    "redis": "3.1.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.3.0",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/connect-redis": "^0.0.18",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.2",
    "@types/node": "^16.0.0",
    "@types/redis": "^2.8.32",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "_moduleAliases": {
    "@logger": "dist/logger/index.js",
    "@doc": "dist/app.doc.js",
    "@auth": "dist/auth/index.js",
    "@config": "dist/config/index.js",
    "@redis": "dist/redis/index.js",
    "@session": "dist/session/index.js",
    "@user": "dist/user/index.js",
    "@user/*": "dist/user/*",
    "@util/*": "dist/util/*",
    "@error": "dist/error/index.js",
    "@db": "dist/prisma/index.js",
    "@task": "dist/task/index.js",
    "@workflow": "dist/workflow/index.js",
    "@credential": "dist/credential/index.js",
    "@protos": "dist/protos/index.js"
  }
}
